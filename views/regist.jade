extends layout

block content
    #body
      h1 用户注册
      form(action="http://127.0.0.1:8000/regist", method="post")
        p
          | 用户名
          input#username.input(type="text", name="username")
        p
          | 密码
          input#password.input(type="text", name="password")
        p
          | 确认密码
          input#passwordConfirm.input(type="text", name="passwordConfirm")
        p
          | 学号
          input#id.input(type="text", name="id")
        p
          | 电话
          input#phone.input(type="text", name="phone")
        p
          | 邮箱
          input#mail.input(type="text", name="mail")
        #button
          p
            input#submit(type="submit", value="注册")
            input(type="reset")
